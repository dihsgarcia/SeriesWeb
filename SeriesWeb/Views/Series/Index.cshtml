@model IEnumerable<Serie>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light">Lista Series</h2>
        </div>      
        <div class="col-6 text-end">
            <a asp-controller="Series" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Nova Serie
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>           
                <th>
                    Gênero
                </th>
                <th>
                    Titulo
                </th>
                 <th>
                     Descrição
                 </th>
                 <th>
                     Ano
                 </th>
                 <th>
                     Excluido
                 </th>
                  <th>
                      Ações
                  </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>                  
                    <td>
                        @obj.Genero
                    </td>
                    <td >
                         @obj.Titulo
                    </td>
                    <td>
                         @obj.Descricao
                    </td>
                    <td>
                         @obj.Ano
                    </td>
                    <td>
                         @obj.Excluido
                    </td>
                     <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Series" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Editar</a>

                            <a asp-controller="Series" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Deletar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>